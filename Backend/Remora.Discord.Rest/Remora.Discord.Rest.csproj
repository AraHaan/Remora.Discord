<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>30.0.1</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations of Discord's REST API, complete with client-side sanity
            checks and rate limiting support.
        </Description>
        <PackageReleaseNotes>
            Use 50r/1s global rate limits instead of older 10k/1d global rate limits.
            Update and default to API v10.
            Exempt interaction endpoints from global rate limits.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.2" />
      <PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
        <PackageReference Include="Remora.Rest" Version="1.2.1" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.API\Remora.Discord.API.csproj" />
    </ItemGroup>

</Project>
