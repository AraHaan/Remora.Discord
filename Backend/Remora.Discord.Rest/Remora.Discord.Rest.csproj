<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>14.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations of Discord's REST API, complete with client-side sanity
            checks and rate limiting support.
        </Description>
        <PackageReleaseNotes>
            Improve method naming consistency.
            Implement Invite::StageInstance.
            Update &amp; fix channel-related property converters.
            Update some thread-related things.
            Fix bugs revealed by the improved annotation support.
            Help the compiler a little.
            Remove bad test.
            Draft for improving nullability annotations in optionals.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="5.0.1" />
      <PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.API\Remora.Discord.API.csproj" />
    </ItemGroup>

</Project>
