<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
    </PropertyGroup>

    <PropertyGroup>
        <Version>1.0.0-beta7</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations of Discord's REST API, complete with client-side sanity
            checks and rate limiting support.
        </Description>
        <PackageReleaseNotes>
            Add support for editing webhook messages.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="5.0.0" />
      <PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.API\Remora.Discord.API.csproj" />
    </ItemGroup>

</Project>
