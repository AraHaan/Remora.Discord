<Project Sdk="Remora.Sdk/2.0.1">

    <PropertyGroup>
        <VersionPrefix>44.0.0</VersionPrefix>
        <Description>Remora.Discord's implementation of Discord's REST API</Description>
        <PackageReleaseNotes>
            Fix optionality of argument.
            Improve memory pressure in ImagePacker by not allocating extra byte[] buffers if they can be retrieved from the Stream directly
            Implement support for Forums.
            Allow component-only messages.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="7.0.0" />
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="7.0.0" />
      <PackageReference Include="Polly" Version="7.2.3" />
      <PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.API\Remora.Discord.API.csproj" />
      <ProjectReference Include="..\Remora.Discord.Caching.Abstractions\Remora.Discord.Caching.Abstractions.csproj" />
    </ItemGroup>

</Project>
