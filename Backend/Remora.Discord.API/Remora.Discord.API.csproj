<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>15.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations for the abstract API definitions, provided by
            Remora.Discord.API.Abstractions.
        </Description>
        <PackageReleaseNotes>
            Correct field type of Activities.
            Remove system user flag.
            Rename UpdateStatus to UpdatePresence.
            Implement support for slash command permissions.
            Implement Attachment::ContentType.
            Implement support for video quality modes.
            Implement invite reminder flags.
            Implement support for stage channels.
            Implement terms of service and privacy policy fields.
            Update ActivityType.
            Implement RTCRegion.
            Implement application invites.
            Add UseSlashCommands permission.
            Implement application flags.
            Implement Webhook::URL.
            Remove unsupported before pagination.
            Implement missing fields in guild member update.
            Implement IntegrationCreate, Update, and Delete.
            Add welcome screen endpoints.
            Add Buttons to Activity.
            Add SourceGuild and SourceChannel on Webhook.
            Add missing properties in ModifyChannelPositions.
            Add missing parameters in Create and Modify guild.
            Fix property name in CreateChannelInviteAsync.
            Document error code 60003.
            Fix nullability of UserID on the audit log entry.
            Add endpoint for searching members.
            Add clientside limits for nonces.
            Remove MessageApplication.
            Update signature of VoiceServerUpdate.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
        <PackageReference Include="System.Text.Json" Version="5.0.2" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.API.Abstractions\Remora.Discord.API.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="API\Objects\Activities\ActivityAssets.cs">
        <DependentUpon>Activity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\ActivityEmoji.cs">
        <DependentUpon>Activity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\ActivityParty.cs">
        <DependentUpon>Activity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\ActivitySecrets.cs">
        <DependentUpon>Activity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\ActivityTimestamps.cs">
        <DependentUpon>Activity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\PartySize.cs">
        <DependentUpon>ActivityParty.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Commands\ConnectionProperties.cs">
        <DependentUpon>Identify.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Commands\ShardIdentification.cs">
        <DependentUpon>Identify.cs</DependentUpon>
      </Compile>
      <Compile Update="API\EventPayload.cs">
        <DependentUpon>Payload.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Gateway\Commands\ConnectionProperties.cs">
        <DependentUpon>Identify.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Gateway\Commands\ShardIdentification.cs">
        <DependentUpon>Identify.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
