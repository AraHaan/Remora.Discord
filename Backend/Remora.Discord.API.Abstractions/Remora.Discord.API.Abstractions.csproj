<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>46.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains a complete set of type and API abstractions for the Discord API. It provides no
            concrete implementations; rather, it acts as a general, library-agnostic standard definition of Discord's
            API.
        </Description>
        <PackageReleaseNotes>
            Update the scheduled event portion with regards to Remora.Rest.
            Remove reference to Remora.Discord.Core.
            Remove Remora.Discord.Core.
            Move TokenStore to Remora.Discord.Rest.
            Move FileData out of Remora.Discord.Core.
            Use Remora.Rest nuget packages.
            Port a load of stuff over to Remora.Rest.
            More error codes.
            Implement new error code.
            Implement pleasingly sane changes to the API.
            Implement name/description/location limits.
            Remove "SpeakerIDs".
            Implement support for scheduled events.
            Add "rate_limit_per_user" to thread creation endpoints.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="OneOf" Version="3.0.201" />
      <PackageReference Include="Remora.Rest.Core" Version="1.0.0" />
      <PackageReference Include="Remora.Results" Version="7.0.3" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="API\Objects\Activities\IActivityAssets.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityEmoji.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityParty.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivitySecrets.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityTimestamps.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IPartySize.cs">
        <DependentUpon>IActivityParty.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityButton.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
