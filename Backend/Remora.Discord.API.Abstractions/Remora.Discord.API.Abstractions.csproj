<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>15.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains a complete set of type and API abstractions for the Discord API. It provides no
            concrete implementations; rather, it acts as a general, library-agnostic standard definition of Discord's
            API.
        </Description>
        <PackageReleaseNotes>Correct field type of Activities.
            Remove system user flag.
            Rename UpdateStatus to UpdatePresence.
            Implement support for slash command permissions.
            Implement Attachment::ContentType.
            Implement support for video quality modes.
            Implement invite reminder flags.
            Implement support for stage channels.
            Implement terms of service and privacy policy fields.
            Update ActivityType.
            Implement RTCRegion.
            Implement application invites.
            Add UseSlashCommands permission.
            Implement application flags.
            Implement Webhook::URL.
            Remove unsupported before pagination.
            Implement missing fields in guild member update.
            Implement IntegrationCreate, Update, and Delete.
            Add welcome screen endpoints.
            Add Buttons to Activity.
            Add SourceGuild and SourceChannel on Webhook.
            Add missing properties in ModifyChannelPositions.
            Add missing parameters in Create and Modify guild.
            Fix property name in CreateChannelInviteAsync.
            Document error code 60003.
            Fix nullability of UserID on the audit log entry.
            Add endpoint for searching members.
            Add clientside limits for nonces.
            Remove MessageApplication.
            Update signature of VoiceServerUpdate.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.Core\Remora.Discord.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="OneOf" Version="3.0.178" />
      <PackageReference Include="Remora.Results" Version="4.0.1" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="API\Objects\Activities\IActivityAssets.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityEmoji.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityParty.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivitySecrets.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityTimestamps.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IPartySize.cs">
        <DependentUpon>IActivityParty.cs</DependentUpon>
      </Compile>
      <Compile Update="API\Objects\Activities\IActivityButton.cs">
        <DependentUpon>IActivity.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
