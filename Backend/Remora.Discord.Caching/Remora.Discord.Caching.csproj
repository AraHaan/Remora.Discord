<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>6.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains memory cache functionality for the gateway and REST API.
        </Description>
        <PackageReleaseNotes>
            Improve method naming consistency.
            Implement Invite::StageInstance.
            Update &amp; fix channel-related property converters.
            Update some thread-related things.
            Fix bugs revealed by the improved annotation support.
            Help the compiler a little.
            Remove bad test.
            Draft for improving nullability annotations in optionals.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="5.0.0" />
    </ItemGroup>

</Project>
