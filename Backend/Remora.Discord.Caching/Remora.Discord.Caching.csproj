<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>20.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains memory cache functionality for the gateway and REST API.
        </Description>
        <PackageReleaseNotes>
            Implement modal support.
            Add type 11 (Attachment).
            Rework interaction callback data structures.
            Fix optionality of CreatorID.
            Add new error code.
            Fix nullability of create_timestamp.
            Implement IsNewlyCreated for thread creation events.
            Implement partial permission overwrites.
            Implement scheduled event covers.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="6.0.1" />
    </ItemGroup>

</Project>
