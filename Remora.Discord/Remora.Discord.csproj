<Project Sdk="Remora.Sdk">

    <PropertyGroup>
        <VersionPrefix>2022.50</VersionPrefix>
        <Description>Metapackage for Remora.Discord's various components</Description>
        <PackageReleaseNotes>
            Update dependencies.
            Update Remora.Sdk.
            BREAKING: Add support for automod regex matching
            Add missing documentation
            Fix missing converters for IChannel::DefaultThreadLimitPerUser
            BREAKING: Add new user flag
            Fix race condition when reconnecting.
            Fix issue with attributes on unnamed group types
            BREAKING: Rework command context inheritance tree
            BREAKING: Remove fallback tree for command execution
            Add new command event for preparation failures (not found, condition failed..)
            Add some UML for the command flow
            Add support for adding all responders and/or command groups from an assembly
        </PackageReleaseNotes>

        <!-- No need for build output, since this is a metapackage -->
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <NoPackageAnalysis>true</NoPackageAnalysis>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Backend\Remora.Discord.Caching\Remora.Discord.Caching.csproj" />
      <ProjectReference Include="..\Remora.Discord.Commands\Remora.Discord.Commands.csproj" />
      <ProjectReference Include="..\Remora.Discord.Extensions\Remora.Discord.Extensions.csproj" />
      <ProjectReference Include="..\Remora.Discord.Hosting\Remora.Discord.Hosting.csproj" />
      <ProjectReference Include="..\Remora.Discord.Interactivity\Remora.Discord.Interactivity.csproj" />
      <ProjectReference Include="..\Remora.Discord.Pagination\Remora.Discord.Pagination.csproj" />
    </ItemGroup>

</Project>
