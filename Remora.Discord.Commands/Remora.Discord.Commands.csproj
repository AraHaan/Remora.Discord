<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
    </PropertyGroup>

    <PropertyGroup>
        <Version>1.1.0</Version>
        <Description>
            $(BaseDescription)

            This package provides simple glue code for using Remora.Commands with Remora.Discord.
        </Description>
        <PackageReleaseNotes>
            Add a convenience method for adding all services.
            Add a RequireContext condition that's enabled by default.
            Add parsers for channels, guild members, roles, and users.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Backend\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Remora.Commands" Version="1.2.2" />
    </ItemGroup>

</Project>
