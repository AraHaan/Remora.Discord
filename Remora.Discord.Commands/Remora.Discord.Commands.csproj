<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>2.0.0</Version>
        <Description>
            $(BaseDescription)

            This package provides simple glue code for using Remora.Commands with Remora.Discord.
        </Description>
        <PackageReleaseNotes>
            Replace the result types used, porting the library to Remora.Results 2.0.
            Update slash command name limitations.
            Implement support for DM slash commands.
            Update dependencies.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Backend\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Remora.Commands" Version="2.0.4" />
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
