<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>3.10.5</Version>
        <Description>
            $(BaseDescription)

            This package provides simple glue code for using Remora.Commands with Remora.Discord.
        </Description>
        <PackageReleaseNotes>
            Due to changes on Discord's API, all command names, group names, and parameter names are now kebaberized
            (input words are separated with hyphens, and all letters are lower-cased) before being passed to the API.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Backend\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Remora.Commands" Version="3.1.0" />
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
