<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>1.3.5</Version>
        <Description>
            $(BaseDescription)

            This package provides simple glue code for using Remora.Commands with Remora.Discord.
        </Description>
        <PackageReleaseNotes>
            Multitarget to .NET 5.0 for better language integration and smaller dependency graphs.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Backend\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Remora.Commands" Version="1.3.2" />
    </ItemGroup>

</Project>
