<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>3.8.0</Version>
        <Description>
            $(BaseDescription)

            This package provides simple glue code for using Remora.Commands with Remora.Discord.
        </Description>
        <PackageReleaseNotes>
            Update dependencies.
            Include the application ID and resolved objects in the interaction context.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Backend\Remora.Discord.Gateway\Remora.Discord.Gateway.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Remora.Commands" Version="3.0.1" />
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
